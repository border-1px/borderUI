@keyframes pf-zoom-in {
  from {
    opacity: 0;
    transform: scale3d(.3, .3, .3);
  }
  50% {
    opacity: 1;
  }
}

@keyframes pf-rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes pf-notify-in {
  0% {
    opacity: 0;
    transform: translate3d(0, -50px, 0);
  }
  50% {
    opacity: .5;
  }
  100% {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

@keyframes pf-notify-out {
  0% {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translate3d(0, -50px, 0);
  }
}

.pf-mask
  position absolute
  left 0
  right 0
  bottom 0
  top 0
  background-color rgba(0,0,0,0.4)
  display flex
  align-items center
  justify-content center

border-1px($color = #e4e4e4,$pos = 'bottom')
  position relative
  &:after
    content: '';
    position: absolute;
    z-index: 9999999;
    if $pos == 'bottom'
      bottom:0;
    else
      top:-1;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: $color
